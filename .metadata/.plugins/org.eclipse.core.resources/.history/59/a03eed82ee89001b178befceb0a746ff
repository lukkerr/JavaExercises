package sorteio;
import java.util.Random;
import java.util.stream.IntStream;
import java.util.Arrays;

public class Sorteio {
	private int n;
	private int min;
	private int max;
	private int[] numeros;
	
	public Sorteio(int n, int min, int max) {		
		setN(n);
		setMin(min);
		setMax(max);
		setNumeros(new int[n]);
		
		gerarNumeros();
	}
	
	public void gerarNumeros() {
		for(;;) {
			proximoNumero();
			System.out.println( resultado(",") );
			if( terminou() )
				break;
		}
	}
	
	public void proximoNumero() {		
		Random sorteio = new Random();
		int maxValue = getMax() - getMin() + 1;
		int sorteado = (int) sorteio.nextInt(maxValue) + getMin();
		
		boolean contains = IntStream.of(getNumeros()).anyMatch(x -> x == sorteado);
		if(contains)
			proximoNumero();
		else
			getNumeros()[lastIndex()] = sorteado;
	}
	
	public boolean terminou() {
		boolean result = false;
		lastIndex() == getN()) ? result = true : false;
		return result;
	}
	
	public int lastIndex(){
		int last = getNumeros().length;
		for(int x = 0; x < last; x++) {
			if(getNumeros()[x] == 0) {
				last = x;
				break;
			}
		}
		return last;
	}
	
	public String resultado(String padrao) {
		String[] strArray = new String[lastIndex()];
		int[] intArray = new int[lastIndex()];
		
		for(int i = 0; i < lastIndex(); i++) {
			intArray[i] = getNumeros()[i];
		}
		
		Arrays.sort(intArray);
		
		for(int i = 0; i < lastIndex(); i++) {
			strArray[i] =  String.valueOf(intArray[i]);
		}
		
		return "[" + String.join(padrao, strArray) + "]";
	}
	
	public int getN() {
		return n;
	}

	public void setN(int n) {
		this.n = n;
	}

	public int getMin() {
		return min;
	}

	public void setMin(int min) {
		this.min = min;
	}

	public int getMax() {
		return max;
	}

	public void setMax(int max) {
		this.max = max;
	}

	public int[] getNumeros() {
		return numeros;
	}

	public void setNumeros(int[] numeros) {
		this.numeros = numeros;
	}
}
